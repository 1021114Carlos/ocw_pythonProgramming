# Implementing Sliding Window Algorithm
# Generate a list of 1,000 random digits (0-9)
#random_digits = ''.join(random.choices('0123456789', k=1000))

# Hard-coded string of digits
random_digits = ''

# Initialize the maximum product
max_product = 0
max_digits = ""

# Calculate the product of the first 13 digits
current_product = 1
for i in range(13):
    current_product *= int(random_digits[i])

max_product = current_product
max_digits = random_digits[:13]

# Use a sliding window approach to calculate the product of the next 13 digits
for i in range(13, len(random_digits)):
    if random_digits[i - 13] != '0':
        current_product //= int(random_digits[i - 13])
    else:
        # If the digit to be removed is zero, recalculate the product from scratch
        current_product = 1
        for j in range(i - 12, i + 1):
            current_product *= int(random_digits[j])
        max_product = max(max_product, current_product)
        max_digits = random_digits[i - 12:i + 1]
        continue
    
    current_product *= int(random_digits[i])
    if current_product > max_product:
        max_product = current_product
        max_digits = random_digits[i - 12:i + 1]

print("The largest product of thirteen consecutive digits is:", max_product)
print("The digits are:", max_digits)
